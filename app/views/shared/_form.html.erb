<div class="row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for @product do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control", value: product.name %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control", value: product.description %>

  <%= f.label :url %>
  <%= f.text_field :url, class: "form-control", value: product.url %>

  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control", value: product.price %>

  <%= f.submit button_text, class: "btn btn-primary", disable_with: "Creating..." %>
<% end %>

</div>
</div>
