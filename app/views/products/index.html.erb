<h1> Products </h1>
<table class="table table-hover table-bordered">
<tr>
  <th> Name </th>
  <th> Description </th>
  <th> Price </th>
  <th> Url </th>
  <th> Published </th>
</tr>

<% @products.each do |product| %>
  <tr class="<%= product.published ? "success" : "danger"%>">
    <td> <%= link_to product.name, edit_product_path(product) %> </td>
    <td> <%= product.description %>  </td>
    <td> $<%= product.price %>  </td>
    <td> <a href='<%= product.url %>'> link </a> </td>
    <td> <%= product.published %> </td>
  </tr>
<% end %>

</table>
